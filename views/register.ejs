<div class="row mt-5">
    <div class="col-md-6 m-auto">

        <div class=" card card-body ">
            <h1>REGISTER</h1>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">NAME</label>
                    <input name= name type="name" class="form-control" id="name" placeholder="Enter Your Name"
                        value="<%= typeof name != 'undefined' ? name : ' '   %>">
                </div>
                <div class="form-group">
                    <label for="email">EMAIL</label>
                    <input name= email type="email" class="form-control" id="email" placeholder="Enter Your Email"
                    value ="<%= typeof name != 'undefined' ? email : ' '   %>">
                </div>
                <div class="form-group">
                    <label for="password">PASSWORD</label>
                    <input name= password type="password" class="form-control" id="password" placeholder="Enter Your Password"
                        value="<%= typeof name != 'undefined' ? password : ' '   %>">
                </div>
                <div class="form-group">
                    <label for="password2">CONFIRM PASSWORD</label>
                    <input name=password2 type="password" class="form-control" id="password2" placeholder="Confirm Your Password"
                        value="<%= typeof name != 'undefined' ? password2 : ' '   %>">
                </div>
                <button type="submit" class="btn btn-block btn-success">Sign Up</button>
            </form>
            <p class="lead mt-4"> HAVE AN ACCOUNT <a href="/users/login">LOG IN</a></p>


        </div>
    </div>
</div>